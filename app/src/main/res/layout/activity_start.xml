<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartActivity">

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.063"
        app:srcCompat="@drawable/logo" />

    <Button
        android:id="@+id/wezwijPomocButton"
        android:layout_width="290dp"
        android:layout_height="98dp"
        android:text="WEZWIJ POMOC"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="21dp"
        android:textStyle="bold"
        android:backgroundTint="#1E90FF"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.292" />

    <Button
        android:id="@+id/udzielPomocyButton"
        android:layout_width="290dp"
        android:layout_height="98dp"
        android:text="UDZIEL POMOCY"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="21dp"
        android:textStyle="bold"
        android:backgroundTint="#1E90FF"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499" />

    <Button
        android:id="@+id/twojeBezpieczenstwoButton"
        android:layout_width="290dp"
        android:layout_height="98dp"
        android:text="TWOJE BEZPIECZEŃSTWO"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="21dp"
        android:textStyle="bold"
        android:backgroundTint="#1E90FF"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.709" />

    <Button
        android:id="@+id/dodatkoweInformacjeButton"
        android:layout_width="290dp"
        android:layout_height="98dp"
        android:text="DODATKOWE INFORMACJE"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="21dp"
        android:textStyle="bold"
        app:cornerRadius="30dp"
        android:backgroundTint="#1E90FF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.914" />

    <TextView
        android:id="@+id/wyjdzButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WYJDŹ"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.957"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.977" />

</androidx.constraintlayout.widget.ConstraintLayout>